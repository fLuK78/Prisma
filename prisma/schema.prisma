// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Model Room สำหรับระบบจองห้อง
model Room {
  id        Int      @id @default(autoincrement())
  name      String
  building  String?
  capacity  Int
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User{
  email     String @unique
  id        Int  @id @default(autoincrement())
  name      String
  password  String
  tel       String?
  role      String
}